generator client {
  provider = "prisma-client"
  output   = "../src/generated"
  engineType = "client"

}

datasource db {
  provider = "mysql"
}

model User {
  id        String   @id @default(uuid())
  name      String  
  email     String   @unique
  password  String
  role      String   @default("user")
  image     String?
  createdAt DateTime @default(now())

}

model passwordResetTokens {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  token   String?
  expiresAt DateTime?
}

model Product {
  id        Int  @id @default(autoincrement())
  name      String
  price     Int
  category  String
  description String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

}